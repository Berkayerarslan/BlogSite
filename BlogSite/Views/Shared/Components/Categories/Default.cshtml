
@model List<BlogSite.Src.Entities.Category>
 
<div class="col-lg-12">
    <div class="sidebar-item categories">
        <div class="sidebar-heading">
            <h2>Categories</h2>
        </div>
        <div class="content">
            <ul>
                @foreach (var category in Model)
                {
                    <li><a href="/Home/Index?type=category&id=@category.Id">@category.Name</a></li>
                }


            </ul>
        </div>
    </div>
</div>