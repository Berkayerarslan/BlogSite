
@model List<BlogSite.Src.Entities.Post>




<div class="col-lg-12">
    <div class="sidebar-item recent-posts">
        <div class="sidebar-heading">
            <h2>Son eklenen Makaleler</h2>
        </div>
        <div class="content">


            <ul>
                @foreach (var post in Model)
                {
                    <li>
                        <a href="/Home/PostDetail">
                            <h5>@post.Content.Substring(0, 80)</h5>
                            <span>@post.CreateTime</span>
                        </a>
                    </li>
                }

            </ul>
        </div>
    </div>
</div>