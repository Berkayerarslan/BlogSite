@{
    ViewData["Title"] = "Home Page";
}  
@model PostViewModel


<!-- Banner Ends Here -->

@foreach (var item in Model.Posts)
{
    @item.AuthorName
}

<section class="blog-posts grid-system" style="margin-top: 150px !important">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="all-blog-posts">
                    <div class="row">
                        @foreach (var post in Model.Posts)
                        {
                            <div class="col-lg-6">

                                <div class="blog-post">
                                    <div class="blog-thumb">
                                        <img src="assets/images/blog-thumb-01.jpg" alt=""> 
                                    </div>
                                    <div class="down-content">
                                        <span><a href="/Home/PostDetail?id=@post.Id">@post.Title </a></span>
                                        <a href="post-details.html"><h4>Donec tincidunt leo</h4></a>
                                        <ul class="post-info">
                                            <li><a href="#">@post.AuthorName</a></li>
                                            <li><a href="#">@post.CreateTime</a></li>
                                           
                                        </ul>
                                        <p>@post.Content.Substring(0, 100)</p>
                                        <div class="post-options">
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <ul class="post-tags">
                                                        <li><i class="fa fa-tags"></i></li>
                                                        @foreach (var item in post.Tags)
                                                        {
                                                            <li><a href="#">@item.Name</a>,</li>
                                                        }

                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        }
                            
                            <div class="col-lg-12">
                                <ul class="page-numbers">
                                    <li><a href="#">1</a></li>
                                    <li class="active"><a href="#">2</a></li>
                                    <li><a href="#">3</a></li>
                                    <li><a href="#"><i class="fa fa-angle-double-right"></i></a></li>
                                </ul>
                            </div>
                        </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="sidebar">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="sidebar-item search">
                                <form asp-controller="Home" asp-action="Index" method="get">
                                    <input type="text" name="title" class="searchText" placeholder="type to search..." autocomplete="on">
                                </form>
                            </div>
                        </div>
                        @await Component.InvokeAsync("RecentPosts")
                        @await Component.InvokeAsync("Categories")


                        <div class="col-lg-12">
                            <div class="sidebar-item tags">
                                <div class="sidebar-heading">
                                    <h2>Tag Clouds</h2>
                                </div>
                                <div class="content">
                                    <ul>
                                        @foreach (var tag in Model.Tags)
                                        {
                                            <li><a href="/Home/Index?type=tag&id=@tag.Id">@tag.Name</a></li>
                                        }


                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

